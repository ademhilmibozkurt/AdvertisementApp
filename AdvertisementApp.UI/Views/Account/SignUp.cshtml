@model AppUserCreateModel

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="mt-4">

    <form asp-action="SignUp" asp-controller="Account" method="post" class="p-4 w-25 mx-auto">
        
        <div class="mb-3">
            <label> İsminiz: </label>
            <input asp-for="@Model.FirstName" class="form-control"/>
        </div>

        <div class="mb-3">
            <label> Soyisminiz: </label>
            <input asp-for="@Model.LastName" class="form-control" />
        </div>

        <div class="mb-3">
            <label> Email: </label>
            <input asp-for="@Model.Email" class="form-control" />
        </div>

        <div class="mb-3">
            <label> Telefon Numarası: </label>
            <input asp-for="@Model.PhoneNumber" class="form-control" />
        </div>

        <div class="mb-3">
            <label> Kullanıcı Adı: </label>
            <input asp-for="@Model.UserName" class="form-control" />
        </div>

        <div class="mb-3">
            <label> Şifre: </label>
            <input asp-for="@Model.Password" class="form-control" />
        </div>

        <div class="mb-3">
            <label> Şifre Tekrar: </label>
            <input asp-for="@Model.ConfirmedPassword" class="form-control" />
        </div>

        <div class="mb-3">
            <select class="form-select" asp-items="@Model.Genders" asp-for="@Model.GenderId">
                <option value="0"> Cinsiyetinizi seçiniz. </option>
            </select>
        </div>

        <div class="mb-3 text-end">
            <button type="submit" class="btn btn-primary"> Kaydet </button>
        </div>
        
        <div class="text-danger" asp-validation-summary="All">
            
        </div>

    </form>

</div>